<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/z">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/chronometerBG"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/btnReset"
        android:onClick="resetTimer"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:layout_alignRight="@+id/txtStatus"
        android:layout_alignEnd="@+id/txtStatus"
        android:layout_alignLeft="@+id/txtStatus"
        android:layout_alignStart="@+id/txtStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOADING..."
        android:id="@+id/txtStatus"
        android:textSize="40dp"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Tasks"
        android:id="@+id/btnTasks"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnReset"
        android:layout_alignStart="@+id/btnReset"
        android:layout_alignRight="@+id/btnReset"
        android:layout_alignEnd="@+id/btnReset"
        android:onClick="openTasks" />

</RelativeLayout>
